{
  "name": "ndarray.js",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "base": "dotenv-run-script .env --",
    "ts-node": "ts-node -r tsconfig-paths/register",
    "jest": "jest --coverage",
    "build": "npm run ts-node build.ts",
    "pretest": "npm run core:build",
    "test": "npm run base -- jest",
    "pretest:release": "npm run core:build:release",
    "test:release": "npm run base -- jest",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "core:build": "export CP=$(pwd) && cd ./src/core-rust && wasm-pack build --dev --debug && cd ${CP}",
    "core:build:release": "export CP=$(pwd) && cd ./src/core-rust && wasm-pack build --release && cd ${CP}",
    "asc": "asc ./src/core-assembly/index.ts -d ./src/wasmModule.d.ts --exportRuntime --enable simd",
    "asbuild:untouched": "npm run asc -- --target debug",
    "asbuild:optimized": "npm run asc -- -O3z --converge --target release",
    "asbuild": "npm run asbuild:untouched && npm run asbuild:optimized"
  },
  "author": "akishichinibu@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@assemblyscript/loader": "^0.19.22",
    "@types/benchmark": "^2.1.1",
    "@types/chai": "^4.2.16",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/webpack": "^5.28.0",
    "as-wasi": "^0.4.6",
    "assemblyscript": "^0.19.22",
    "benchmark": "^2.1.4",
    "chai": "^4.3.4",
    "dotenv-run-script": "^0.2.0",
    "esbuild": "^0.14.9",
    "esbuild-plugin-wasm": "^1.0.0",
    "esbuild-register": "^3.3.1",
    "jest": "^27.4.4",
    "prettier": "^2.4.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.2.3",
    "wasi": "^0.0.6"
  },
  "dependencies": {}
}
